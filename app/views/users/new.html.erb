<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %> 
<div class="field">
<%= simple_form_for @user do |f| %>
  <%= f.input :email%>
  <%= f.input :password%>
  <%= f.input :password_confirmation%>
  <%= f.button :submit %>
<% end %>
<% end %>